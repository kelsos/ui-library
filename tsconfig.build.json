{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "exclude": [
    "src/**/*.stories.ts",
    "src/stories",
    "src/**/*.spec.ts",
    "tests",
    "example",
    "**/*.config.ts",
    ".storybook/",
    "tests/"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
